<%= form_for @item, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :sale_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sale_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :picture_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :picture_file_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :picture_content_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :picture_content_type, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :picture_file_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :picture_file_size, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :picture_updated_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :picture_updated_at, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :initial_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :initial_price, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :currency, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :currency, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            items_path, :class => 'btn btn-default' %>
 
<% end %>
