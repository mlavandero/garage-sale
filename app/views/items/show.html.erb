<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:sale_id) %>:</strong></dt>
  <dd><%= @item.sale_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture_file_name) %>:</strong></dt>
  <dd><%= @item.picture_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture_content_type) %>:</strong></dt>
  <dd><%= @item.picture_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture_file_size) %>:</strong></dt>
  <dd><%= @item.picture_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture_updated_at) %>:</strong></dt>
  <dd><%= @item.picture_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @item.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @item.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:initial_price) %>:</strong></dt>
  <dd><%= @item.initial_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:currency) %>:</strong></dt>
  <dd><%= @item.currency %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_path(@item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_path(@item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
