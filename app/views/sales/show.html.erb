<%- model_class = Sale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
    <dd><%= @sale.title %></dd>
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @sale.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
    <dd><%= @sale.active %></dd>
    <dt><strong><%= model_class.human_attribute_name(:expiration_date) %>:</strong></dt>
    <dd><%= @sale.expiration_date %></dd>
  </dl>
</div>


<%= link_to t('.back', :default => t("helpers.links.back")),
              client_sales_path(@sale.client), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_client_sale_path(@sale.client, @sale), :class => 'btn btn-default' %>
<%= link_to t('.new_item', default: t('helpers.links.new', model: Item.model_name.human.titleize)), new_client_sale_item_path(@sale.client, @sale), class: 'btn btn-primary' %>
